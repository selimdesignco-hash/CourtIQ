{
  "name": "Game",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Game title or opponent name"
    },
    "video_url": {
      "type": "string",
      "description": "URL of the uploaded video"
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "opponent": {
      "type": "string"
    },
    "tournament": {
      "type": "string"
    },
    "analysis_status": {
      "type": "string",
      "enum": [
        "pending",
        "analyzing",
        "completed",
        "failed"
      ],
      "default": "pending"
    },
    "scouting_report": {
      "type": "object",
      "description": "AI-generated scouting report",
      "properties": {
        "key_players": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "number": {
                "type": "string"
              },
              "position": {
                "type": "string"
              },
              "strengths": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "weaknesses": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "tendencies": {
                "type": "string"
              }
            }
          }
        },
        "offensive_sets": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "frequency": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            }
          }
        },
        "defensive_schemes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "frequency": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            }
          }
        },
        "coaching_keys": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "coach_notes": {
      "type": "string"
    }
  },
  "required": [
    "title"
  ]
}
